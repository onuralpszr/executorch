#ifndef COMMON_GLSLH
#define COMMON_GLSLH

#define align_up_4(x) ((x + 3) & -4)

#define div_up_4(x) (((x) + 3) >> 2)

#define mul_4(x) ((x) << 2)
#define div_4(x) ((x) >> 2)

#define mod_4(x) ((x) & 3)

struct TensorIndex4D {
  ivec4 data;
};

#ifdef DEBUG_MODE

#extension GL_EXT_debug_printf : require

void printTensorIndex4D(const TensorIndex4D index) {
  debugPrintfEXT(
      "tensor_idx: %d, %d, %d, %d\\n",
      index.data.x,
      index.data.y,
      index.data.z,
      index.data.w);
}

#endif // DEBUG_MODE

#endif // COMMON_GLSLH
